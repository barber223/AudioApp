<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/track_information_edit_text"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="jekfhufuob"
            />

        <ImageButton
            android:id="@+id/add_categoryButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_add_black_24dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/current_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            />

        <SeekBar
            android:id="@+id/track_info_bar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/max_length_track_length"
            android:text="3:00"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/track_notes"
            android:layout_width="300dp"
            android:layout_height="fill_parent" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/save_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_save_black_24dp"
                />

            <ImageButton
                android:id="@+id/play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_play_arrow_black_24dp"
                />

            <ImageButton
                android:id="@+id/pause_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_pause_black_24dp"
                />

            <ImageButton
                android:id="@+id/skip_forward_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_skip_next_black_24dp"
                />

            <ImageButton
                android:id="@+id/record_btn"
                android:layout_width="100dp"
                android:layout_height="100dp"

                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>